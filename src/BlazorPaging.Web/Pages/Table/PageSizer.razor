<div class="flex">

    <label for="pageSize" class="my-2 pr-1 text-sm font-normal text-gray-600">Page size</label>

    <select class="m-1 px-2 py-1 w-14 block border border-gray-300 text-sm text-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500" @onchange="ValueChanged">
        <option>5</option>
        <option>10</option>
        <option>25</option>
        <option>50</option>
        <option>100</option>
    </select>

</div>

@code
{

    [Parameter]
    public int PageSize { get; set; }

    [Parameter]
    public EventCallback<int> OnChange { get; set; }

    private void ValueChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();

        if (int.TryParse(value, out int pageSize))
        {
            OnChange.InvokeAsync(pageSize);
        }
    }
}